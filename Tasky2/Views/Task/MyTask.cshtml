@model IEnumerable<Tasky2.Models.TaskListViewModel>

@{
    ViewData["Title"] = "MyTask";
}

<h4>MyTask</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="tasksTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskId)
                </td>
                <td>

                    @if (item.IsCompleted)
                    {
                        @Html.DisplayFor(modelItem => item.Name)
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Name)
                    }


                </td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="strikethrough">
                            @Html.DisplayFor(modelItem => item.TaskName)
                        </span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TaskName)
                    }

                </td>
                <td>

                    @if (item.IsCompleted)
                    {
                        <span class="strikethrough">
                            @Html.DisplayFor(modelItem => item.TaskDescription)
                        </span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TaskDescription)
                    }

                </td>
                <td>
                    @if (item.IsCompleted)
                    {
                        @Html.CheckBoxFor(modelItem => item.IsCompleted, new { @disabled = "disabled" })
                    }
                    else
                    {
                        @Html.CheckBoxFor(modelItem => item.IsCompleted, new { data_toggle = "modal", data_target = "#completedModal" })
                    }

                </td>
                <td>
                    <button type="button" class="btn btn-danger" id="deleteTaskBtn" data-toggle = "modal", data-target = "#deleteModal">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="taskIdHidden" />

<!-- Modal -->
<div class="modal fade" id="completedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure  you want to complete this task?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="taskCompleteBtn">Complete Task</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure  you want to delete this task?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="taskDeleteBtn">Delete Task</button>
            </div>
        </div>
    </div>
</div>
